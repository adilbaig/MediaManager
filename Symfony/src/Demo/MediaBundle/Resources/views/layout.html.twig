<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}My Media Manager{% endblock %}</title>
        <!-- Bootstrap CDN links -->
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
        <link rel="stylesheet" href="/css/override.css">
        
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    </head>
    <body>
        {% if app.user %}
            <a href="{{ path('logout') }}" class="logout-button label label-primary">Logout</a>
        {% endif %}
        
        <ul class="nav nav-tabs" role="tablist">
            {% set paths = {'home' : 'Home', 'list': 'My Music', 'add': 'Add Music', 'play': 'Play'}  %}
            {% for path, text in paths %}
                <li {% if app.request.attributes.get('_route') == path %} class="active" {% endif %} ><a href="{{ path(path) }}">{{ text }}</a></li>
            {% endfor %}
        </ul>
        
        {% block content %}{% endblock %}
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    </body>
</html>