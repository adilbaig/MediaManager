{% extends "DemoMediaBundle::layout.html.twig" %}

{% block content %}
<h1>My Media</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>id</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Album</th>
            <th>Artist</th>
            <th>Media</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {% for t in tracks %}
        <tr>
            <td>{{ t.id }}</th>
            <td>{{ t.title}}</td>
            <td>{{ t.genre}}</td>
            <td>{{ t.album}} </td>
            <td>{{ t.artist}} </td>
            <td>{{ t.file}} </td>
            <td><a href="{{ path('delete', { 'id': t.id } ) }}">Delete</a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}