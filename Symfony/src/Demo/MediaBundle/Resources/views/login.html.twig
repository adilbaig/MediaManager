{% extends "DemoMediaBundle::layout.html.twig" %}

{% block content %}
    

<form action="{{ path('login_check') }}" method="post" class="form_horizontal add_media">

    {% if error %}
    <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}

    <div class="form-group">
        <label for="username" class="control-label col-xs-3">Username:</label>
        <div class="col-xs-8">
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="control-label col-xs-3">Password:</label>
        
        <div class="col-xs-8">
            <input type="password" id="password" name="_password" />
        </div>
    </div>

    <button type="submit" class="btn btn-lg btn-default">Login</button>
</form>
    
{% endblock %}